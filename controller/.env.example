# Controller Configuration

# Database - CHANGE PASSWORD BEFORE USE
DATABASE_URL=postgresql://ce_user:CHANGE_THIS_PASSWORD@localhost:5432/ce_controller
# For SQLite (development only): sqlite:///./ce_controller.db
# WARNING: Never use default passwords in production!

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
AGENT_TOKEN_EXPIRE_DAYS=365

# Application
DEBUG=false
APP_NAME=CE-Controller
APP_VERSION=0.1.0

# CORS - Configure for your deployment
CORS_ORIGINS=https://dashboard.yourdomain.com
# For development: http://localhost:3000,http://localhost:8000
# WARNING: Use HTTPS origins in production!

# API
API_PREFIX=/api
